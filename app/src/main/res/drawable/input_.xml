<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Frame color value -->
    <item>
        <shape>
            <solid android:color="#FF71DEE1" />
            <corners android:radius="80dp" />
        </shape>
    </item>
    <!-- Body background color value -->
    <item android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"> <!--Set only the bottom to have a border-->
        <shape>
            <solid android:color="#FF46B5BE" />
            <corners android:radius="80dp" />
        </shape>
    </item>
</layer-list>